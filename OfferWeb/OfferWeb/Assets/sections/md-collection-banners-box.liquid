                              <div class="slideshow__title" style='font-family:{{block.settings.font_heading.family}};font-weight: {{block.settings.font_heading.weight}};font-style: {{block.settings.font_heading.style}}'>
                                {{ block.settings.heading | html }}
                              </div>
                              {%- unless fonts contains block.settings.font_heading.family -%}
                              {%- assign fonts = fonts | join: ',' | append: block.settings.font_heading.family | split: ',' -%}                    
                                {%- capture css_text -%}{{ block.settings.font_heading | font_face | strip_newlines}}{%- endcapture -%}{%- assign css = css|append:css_text -%}
                              {%- endunless -%}
                            {%- endunless -%}
                            {%- unless block.settings.subheading == blank -%}
                              <div class="slideshow__subtitle" style='font-family:{{block.settings.font_subheading.family}};font-weight: {{block.settings.font_subheading.weight}};font-style: {{block.settings.font_subheading.style}}'>
                                {{ block.settings.subheading | html }}
                              </div>
                              {%- unless fonts contains block.settings.font_subheading.family -%}
                              {%- assign fonts = fonts | join: ',' | append: block.settings.font_subheading.family | split: ',' -%}
                                {%- capture css_text -%}{{ block.settings.font_subheading | font_face | strip_newlines }}{%- endcapture -%}{%- assign css = css|append:css_text -%}
                              {%- endunless -%}
                            {%- endunless -%}
                            {%- unless block.settings.description == blank -%}
                              <div class="slideshow__description" style='font-family:{{block.settings.font_description.family}};font-weight: {{block.settings.font_description.weight}};font-style: {{block.settings.font_description.style}}'>
                                {{ block.settings.description | html }}
                              </div>
                              {%- unless fonts contains block.settings.font_description.family -%}
                              {%- assign fonts = fonts | join: ',' | append: block.settings.font_description.family | split: ',' -%}
                                {%- capture css_text -%}{{ block.settings.font_description | font_face | strip_newlines }}{%- endcapture -%}{%- assign css = css|append:css_text -%}
                              {%- endunless -%}
                            {%- endunless -%}
                            {%- if block.settings.textBtn_1 != blank -%}
                              <div class="slideshow__button list-inline-item mr-2">
                                <a class="btn {{block.settings.style_btn_1}} {{block.settings.style_btn_rounded_1}}{%if block.settings.btn_shadow_1%} btn-shadow{%endif%}" href="{{ block.settings.link_1 | default: '#' }}">{{ block.settings.textBtn_1 | html }}</a>
                              </div>
                            {%- endif -%}
                            {%- if block.settings.textBtn_2 != blank and block.settings.link_2 != blank -%}
                              <div class="slideshow__button list-inline-item last">
                                <a class="btn {{block.settings.style_btn_2}} {{block.settings.style_btn_rounded_2}}{%if block.settings.btn_shadow_2%} btn-shadow{%endif%}" href="{{ block.settings.link_2 | default: '#' }}">{{ block.settings.textBtn_2 | html }}</a>
                              </div>
                            {%- endif -%}
                          </div>
                        </div>
                      </div>
                        {%- capture css_textcontent -%}
                        #Swiper-{{ section.id }} .slideshow__slide--{{ block.id }} .slideshow__text-content{
                          top:{{block.settings.text_alignment_top|append:'%'}};
                          {{cssAlign}}:{{block.settings.text_alignment_left|append:'%'}};
                        }
                        #Swiper-{{ section.id }} .slideshow__slide--{{ block.id }} .slideshow__text-content .page-width{
                          {%- assign tY = block.settings.text_alignment_top|append:'%'-%}
                          {%- assign tX = block.settings.text_alignment_left|append:'%' -%}
                          {%- if cssAlign == 'right' -%}
                          transform: translate({{tX}},-{{tY}});
                          -moz-transform: translate({{tX}},-{{tY}});
                          -webkit-transform: translate({{tX}},-{{tY}});
                          -o-transform: translate({{tX}},-{{tY}});
                          {%- else -%}
                          transform: translate(-{{tX}},-{{tY}});
                          -moz-transform: translate(-{{tX}},-{{tY}});
                          -webkit-transform: translate(-{{tX}},-{{tY}});
                          -o-transform: translate(-{{tX}},-{{tY}});
                          {%- endif -%}
                        }
                        {%- endcapture -%}
                        {%- assign block_id = '.slideshow__slide--' | append: block.id -%}
                        {%- assign css_noscript = css_noscript | append: css_textcontent | append: css_btns | append: block.settings.css_block | append: block.settings.responsive_css | append: block.settings.responsive_css_subheading | append: block.settings.responsive_css_description | replace: ".block_id", block_id -%}
                    </div>
                    {%- endif -%}
                  </div>
                  {%- endif -%}
                  {%-endunless-%}
                  {%-endfor -%}
                </div>
                {%- if section.settings.use_dots -%}
                <div class="swiper-pagination swiper-pagination-{{section.settings.dots_mode}} swiper-pagination-{{section.settings.dots_position}} swiper-pagination-{{section.id}}"></div>
                {%- endif -%}
                {%- if section.settings.use_scrollbar -%}
                <div class="swiper-scrollbar"></div>
                {%- endif -%}
              </div>
              {%- if section.settings.use_navigation -%}
              <div class="swiper-buttons position-absolute">
                <div class="content-buttons position-relative">
                  <div class="swiper-button-prev swiper-button-prev-{{section.id}} fkt-angle-{{cssAlign|default:'left'}} fkt-2x fkt-va"></div>
                  <div class="swiper-button-next swiper-button-next-{{section.id}} fkt-angle-{{cssAlign_rev|default:'right'}} fkt-2x fkt-va"></div>
                </div>
              </div>
              {%- endif -%}
            </div>
          </div>
          {%style%}
            {{css}}
            {%- unless section.settings.fullscreen -%}
            {%- if section.settings.h_reponsive != blank -%}
            #Swiper-{{ section.id }} .slideshow__slide .imagecontainer:before{
              padding-bottom: {{section.settings.h_reponsive | append : 'px'}};
            }
            {%- endif -%}
            {%- if section.settings.h_reponsive_320 != blank -%}
            @media (min-width: 320px){
              #Swiper-{{ section.id }} .slideshow__slide .imagecontainer:before{
                padding-bottom: {{section.settings.h_reponsive_320 | append : 'px'}};
              }
            }
            {%- endif -%}
            {%- if section.settings.h_reponsive_576 != blank -%}
            @media (min-width: 576px){
              #Swiper-{{ section.id }} .slideshow__slide .imagecontainer:before{
                padding-bottom: {{section.settings.h_reponsive_576 | append : 'px'}};
              }
            }
            {%- endif -%}
            {%- if section.settings.h_reponsive_768 != blank -%}
            @media (min-width: 768px){
              #Swiper-{{ section.id }} .slideshow__slide .imagecontainer:before{
                padding-bottom: {{section.settings.h_reponsive_768 | append : 'px'}};
              }
            }
            {%- endif -%}
            {%- if section.settings.h_reponsive_992 != blank -%}
            @media (min-width: 992px){
              #Swiper-{{ section.id }} .slideshow__slide .imagecontainer:before{
                padding-bottom: {{section.settings.h_reponsive_992 | append : 'px'}};
              }
            }
            {%- endif -%}
            {%- if section.settings.h_reponsive_1200 != blank-%}
            @media (min-width: 1200px){
              #Swiper-{{ section.id }} .slideshow__slide .imagecontainer:before{
                padding-bottom: {{section.settings.h_reponsive_1200 | append : 'px'}};
              }
            }
            {%- endif -%}
            {%- endunless-%}
            {{css_noscript | strip_newlines}}
            {%- assign section_id = '#Swiper-' | append: section.id -%}
            {{section.settings.css_section | replace: ".section_id", section_id | strip_newlines}}
          {%endstyle%}
        </div>
        {%- if typeBlocks contains 'banner' and section.settings.banner_width != 0 -%}
        <div class="col-12 {{banner_width}} kt_home_slide_banner {{section.settings.content_type}}">
          <div class="row justify-content-center">
          {%- assign idx0 = 0 -%}
          {%- for block in section.blocks-%}
          {%-if block.type == 'banner' and section.settings.content_type == 'type-1'-%}
            <div class="item-banner col-12 col-md-6 col-lg-12 mt-2{% if idx0 == 0 %} mt-lg-0{% endif %}">
              <div class="banner banner-effect1">
                {%- assign image_item = block.settings.image -%}
                {%-assign width = image_item.width | default: 380.00 | plus: 0.00 -%}{%-assign height = image_item.height | default: 210.00 | plus: 0.00-%}
                <a href="{{block.settings.image_link|default:'#'}}" class="img__banner lazyload" style="padding-bottom: {{height|divided_by: width | times: 100.00000000}}%;" data-bgset="{%- render 'bgset', image: image_item -%}" data-sizes="auto" aria-label="{{shop.name}}"{% unless block.settings.image %} title="380x210 px"{% endunless %}></a>
                {%- if block.settings.title != '' or block.settings.stitle != '' or block.settings.btn_name != '' -%}          
                <div class="banner-content wait-for-css">
                  {%- if block.settings.title != '' -%}
                  <h4 class="banner-subtitle text-white">{{block.settings.title}}</h4>
                  {%- endif -%}
                  {%- if block.settings.stitle != '' -%}
                  <h3 class="banner-title text-white">{{block.settings.stitle}}</h3>
                  {%- endif -%}
                  {%- if block.settings.btn_name != '' -%}
