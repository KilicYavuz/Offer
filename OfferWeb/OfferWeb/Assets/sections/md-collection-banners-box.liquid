            {%- assign idx0 = 1 -%}
          {%-endif-%}
          {%-if block.type == 'banner' and section.settings.content_type == 'type-2'-%}
            <div class="item-banner col-12 col-sm-6 col-lg-4 col-xl-12 mt-2{% if idx0 == 0 %} mt-xl-0{% endif %}">
              <div class="banner">
                {%- assign image_item = block.settings.image -%}
