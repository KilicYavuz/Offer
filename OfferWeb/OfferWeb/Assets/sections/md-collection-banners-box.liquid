                      {%- assign iframe = true -%}
                    {% endif %}
                  {%- endif-%}
                  {%- assign btns_count = 0 -%}
                  {%- if block.settings.textBtn_1 != blank -%}
                    {%- assign btns_count = btns_count | plus: 1 -%}
                  {%- endif -%}
