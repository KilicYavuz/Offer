<!-- header.liquid -->
{%- liquid
assign pr_color = settings.color_head_bg | color_to_hsl
assign pr_color_light = pr_color | split: ', '
assign pr_color_light = pr_color_light[2] | remove: '%' | plus: 0
if settings.use_wishlist
  assign metafields = customer.metafields.nitro_wishlist.products | strip | default: '' | split: '|'
  assign wishlist_hanlde = metafields | last | split: ' '
  assign wishlist_count =  metafields | first | split: ' ' | size
  assign wishlist =  metafields | first
endif
-%}
<header {%if settings.use_wrap_container %}class="wrap-container" {%endif%}data-section-id="{{ section.id }}" data-section-type="header-section" data-header-sticky="{%if section.settings.import_header == '6'%}true{%else%}{{section.settings.sticky_menu}}{%endif%}">
  <div id="header-ontop" class="header-ontop is-sticky"></div>
  <div id="header" class="header style-{{section.settings.import_header}}{% if pr_color_light < 70 %} styleDarken{% endif %}{%if settings.use_mobile_bottom_bar%} has-bottom-bar{%endif%}">
    <div class="content_{{section.id}}{%if section.settings.header_image%} bg-image lazyload{%endif%}" style="margin-top: {{section.settings.header_margin_top|default:'0'|split:'|'|first}};margin-bottom: {{section.settings.header_margin_bottom|default:'0'|split:'|'|first}};padding: {{section.settings.header_padding|default:'0'|split:'|' |first | replace : '-',' '}};"{%if section.settings.header_image%} data-bgset="{{section.settings.header_image | img_url: 'master'}}" data-sizes="auto" data-parent-fit="contain"{%endif%} data-mt-respon="{{section.settings.header_margin_top}}" data-mb-respon="{{section.settings.header_margin_bottom}}" data-p-respon="{{section.settings.header_padding}}" data-el="content_{{section.id}}" data-el-p="content_{{section.id}}">
      {%- assign mapType = section.blocks | map: 'type' -%}
      {%- if section.settings.use_header_announcement and mapType contains 'announcement' -%}
        {% unless section.settings.import_header == '17' %}
        {%- render 'kt_header-announcement' -%}          
        {% endunless %}
      {%- endif -%}
      {%- if section.settings.use_header_top and mapType contains 'top_menu' -%}
        {%- render 'kt_header-top', wishlist_count: wishlist_count -%}
      {%- endif -%}
      {%- assign styleHeader = section.settings.import_header | split: ' ' | first -%}
      {%- case section.settings.import_header -%}
        {%- when '01' -%}
          {%- render 'header-01', section: section, wishlist_count: wishlist_count -%}
        {%- when '02' -%}
          {%- render 'header-02', section: section, wishlist_count: wishlist_count -%}
        {%- when '03' -%}
          {%- render 'header-03', section: section, wishlist_count: wishlist_count -%}
        {%- when '04' -%}
          {%- render 'header-04', section: section, wishlist_count: wishlist_count -%}
        {%- when '05' -%}
          {%- render 'header-05', section: section, wishlist_count: wishlist_count -%}
        {%- when '06' -%}
          {%- render 'header-06', section: section, wishlist_count: wishlist_count -%}
        {%- when '07' -%}
          {%- render 'header-07', section: section, wishlist_count: wishlist_count -%}
        {%- when '08' -%}
          {%- render 'header-08', section: section, wishlist_count: wishlist_count -%}
        {%- when '09' -%}
          {%- render 'header-09', section: section, wishlist_count: wishlist_count -%}
        {%- when '10' -%}
          {%- render 'header-10', section: section, wishlist_count: wishlist_count -%}
        {%- when '11' -%}
          {%- render 'header-11', section: section, wishlist_count: wishlist_count -%}
        {%- when '12' -%}
          {%- render 'header-12', section: section, wishlist_count: wishlist_count -%}
        {%- when '13' -%}
          {%- render 'header-13', section: section, wishlist_count: wishlist_count -%}
        {%- when '01 style-14' -%}
          {%- render 'header-14', section: section, wishlist_count: wishlist_count -%}
        {%- when '01 style-15' -%}
          {%- render 'header-15', section: section, wishlist_count: wishlist_count -%}
        {%- when '16' -%}
          {%- render 'header-16', section: section, wishlist_count: wishlist_count -%}
        {%- when '17' -%}
