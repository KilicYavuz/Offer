  {%- endif -%}

  {%- case section.settings.layout -%}
    {%- when '1' -%}
    {%- render 'product-layout1', pos360: pos360, vrsVideo: vrsVideo, optVr1: optVr1, imgsPos: imgsPos, vrsFeaturedImage: vrsFeaturedImage, imgsPos0: imgsPos0, imgsPos1: imgsPos1, checkOneImage: checkOneImage, checkOneImage_: checkOneImage_ -%}
