    <div class="tab-details-product tabs_style_{{section.settings.layout_tabs}}">
      {%-render 'kt_product_tabs', style: section.settings.layout_tabs-%}
    </div>
    {%- when '5' -%}
    {%- render 'product-layout5', pos360: pos360, vrsVideo: vrsVideo, optVr1: optVr1, imgsPos: imgsPos, vrsFeaturedImage: vrsFeaturedImage, imgsPos0: imgsPos0, imgsPos1: imgsPos1, checkOneImage: checkOneImage, checkOneImage_: checkOneImage_ -%}
    {%- when '6' -%}
