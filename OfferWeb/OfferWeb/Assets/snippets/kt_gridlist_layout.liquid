          <li class="list-inline-item d-none d-xl-inline-block">
            <a href="javascript:void(0)"{%unless gl == '6'%} data-ktpjax{% endunless %} class="show-grid{%if gl == '6'%} active{% endif %}" data-href="6grid{{limit_pds}}"{%unless ly contains 'lis'%} data-col=" col-xs-6 col-sm-4 col-md-2-10 col-xl-2" data-fix-col=" row flex-flow"{%endunless%}>{% render 'icon-ly', col: '6' %}</a>
          </li>
        </ul>
      </li>
      <li class="products-view p-0i">
        <ul class="m-0 p-0">
          <li class="">
            <a href="javascript:void(0)"{%unless limit == 16%} data-ktpjax{% endunless %} class="show-pds{%if limit == 16%} active{% endif %}" data-pds="_16pds" data-href="{{layout_gl}}_16pds">{{'sections.products_section.products_count'| t , count: 16}}</a>
