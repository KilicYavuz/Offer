            <a href="javascript:void(0)"{%unless gl == '4'%} data-ktpjax{% endunless %} class="show-grid{%if gl == '4'%} active{% endif %}" data-href="4grid{{limit_pds}}"{%unless ly contains 'lis'%} data-col=" col-xs-6 col-sm-4 col-lg-3" data-fix-col=" row flex-flow"{%endunless%}>{% render 'icon-ly', col: '4' %}</a>
