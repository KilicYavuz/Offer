            <a href="javascript:void(0)"{%unless gl == '2'%} data-ktpjax{% endunless %} class="show-grid{%if gl == '2'%} active{% endif %}" data-href="2grid{{limit_pds}}"{%unless ly contains 'lis'%} data-col=" col-xs-6" data-fix-col=" row flex-flow"{%endunless%}>{% render 'icon-ly', col: '2' %}</a>
          </li>
          <li class="list-inline-item d-none d-sm-inline-block">
            <a href="javascript:void(0)"{%unless gl == '3'%} data-ktpjax{% endunless %} class="show-grid{%if gl == '3'%} active{% endif %}" data-href="3grid{{limit_pds}}"{%unless ly contains 'lis'%} data-col=" col-xs-6 col-sm-4" data-fix-col=" row flex-flow"{%endunless%}>{% render 'icon-ly', col: '3' %}</a>
