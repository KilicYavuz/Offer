          <li class="">
            <a href="javascript:void(0)"{%unless limit == 20%} data-ktpjax{% endunless %} class="show-pds{%if limit == 20%} active{% endif %}" data-pds="_20pds" data-href="{{layout_gl}}_20pds">{{'sections.products_section.products_count'| t , count: 20}}</a>
