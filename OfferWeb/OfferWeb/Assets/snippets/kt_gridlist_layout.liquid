{%- if settings.coll_gridlist_enable -%}
<ul class="show-grid-list">
  <li class="list-inline-item w-auto pr-1 pl-1">
    <a href="javascript:void(0)"{%unless layout_gl != 'list'%} data-ktpjax{% endunless %} class="show-grid{%if layout_gl != 'list'%} active{% endif %}" data-href="2grid{{limit_pds}}">{% render 'icon-ly', col: 'grid' %}</a>
