{%- if layout == 1 -%}
  <ul class="mb-0 pt-3 list-links">
    {% if shop.customer_accounts_enabled %}
      {% if customer %}
      <li>
        <a href="/account"><span>{{"layout.customer.account"|t}}</span></a>
        <span class="perlink"></span>
        <a href="/account/logout"><span>{{"layout.customer.log_out"|t}}</span></a>
      </li>
      {% else %}
      <li>
        <a href="/account/login{%unless template.directory == 'customers'%}?q={{canonical_url | remove: shop.url | url_encode }}{%endunless%}"><span>{{"layout.customer.log_in"|t}}</span></a>
        <span class="perlink"></span>
        <a href="/account/register"><span>{{"layout.customer.create_account"|t}}</span></a>
      </li>
      {% endif %}
    {% endif %}
    {%- if settings.use_wishlist and pages['wishlist'].url != blank -%}
      <li><a href="{{pages['wishlist'].url}}"><span>{{pages['wishlist'].title}}</span></a></li>
    {% endif %}
    {%- if settings.use_compare -%}
      <li><a href="#" onclick="KT.showModalCompare()"><span>{{'products.compare.title'|t}}</span></a></li>
    {% endif %}
  </ul>
{%- elsif layout == 2 -%}
	<a href="javascript:void(0)" class="text-link fkt-angle-down_ title__topbarMenu text-nowrap">
		<span class="account__name">{{ 'customer.account.mini_title'|t }}</span>
	</a>                                                
	<div class="kiti--DropInner text-left">
		<ul class="mb-0 list-links list-unstyled">
    {%- if shop.customer_accounts_enabled -%}
      {% if customer %}
        <li>
          <a href="/account"><span>{{"layout.customer.account"|t}}</span></a>
          <span class="perlink"></span>
          <a href="/account/logout"><span>{{"layout.customer.log_out"|t}}</span></a>
        </li>
      {% else %}
        <li>
          <a href="/account/login{%unless template.directory == 'customers'%}?q={{canonical_url | remove: shop.url | url_encode }}{%endunless%}"><span>{{"layout.customer.log_in"|t}}</span></a>
          <span class="perlink"> / </span>
          <a href="/account/register"><span>{{"layout.customer.create_account"|t}}</span></a>
        </li>
      {% endif %}
    {%- endif -%}
      <li><a href="/checkout"><span>{{'cart.general.checkout_small'|t}}</span></a></li>
    {%- if settings.use_compare -%}
      <li><a href="#" onclick="KT.showModalCompare()"><span>{{'products.compare.title'|t}}</span></a></li>
