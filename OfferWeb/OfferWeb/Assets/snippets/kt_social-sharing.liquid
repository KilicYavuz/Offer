<ul class="socials list-inline">
{%- if settings.share_facebook -%}
  <li class="list-inline-item">
    <a data-tippy="Share this post on Facebook" class="social-icon social-facebook" href="http://www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=380,width=660');return false;">
      <i class="fkt-facebook-f fkt-va"></i>
    </a>
  </li>
  {%- endif -%}
  {%- if settings.share_twitter -%}
  <li class="list-inline-item">
    <a data-tippy="Share this post on Twitter" class="social-icon social-twitter" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=380,width=660');return false;">
      <i class="fkt-twitter fkt-va"></i>
    </a>
  </li>
  {%- endif -%}
  {%- if settings.share_google_plus -%}
  <li class="list-inline-item">
    <a data-tippy="Share this post on Google Plus" class="social-icon social-google-plus" href="//plus.google.com/share?app=110&url={{ shop.url | append: share_permalink }}" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=380,width=660');return false;">
      <i class="fkt-google-plus-g fkt-va"></i>
    </a>
  </li>
  {%- endif -%}
  {%- if settings.share_pinterest -%}
  <li class="list-inline-item">
    <a data-tippy="Share this post on Pinterest" class="social-icon social-pinterest" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;">
      <i class="fkt-pinterest-p fkt-va"></i>
    </a>
  </li>
  {%- endif -%}
  {%- if settings.share_tumblr -%}
  <li class="list-inline-item">
    <a data-tippy="Share this post on Tumbr" class="social-icon social-tumbl" data-content="{{ share_image | img_url: '1024x1024' }}" href="//tumblr.com/widgets/share/tool?canonicalUrl={{ shop.url | append: share_permalink }}" onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=540');return false;">
      <i class="fkt-tumblr fkt-va"></i>
    </a>
  </li>
  {%- endif -%}
</ul>