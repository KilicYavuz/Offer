<div class="product_delivery">
  {%- capture delivery_text -%}
    {%- if settings.delivery_to_date > settings.delivery_from_date -%}
      {{'products.delivery.between_html'| t: fromDate: 'fromDate', toDate: 'toDate'}}
    {%- else -%}
      {{'products.delivery.on_html'| t: fromDate: 'fromDate'}}
    {%- endif -%}
  {%- endcapture -%}
  <p class="mb-2">
    {{delivery_text | split:'fromDate'| first}}
    <i id="fromDate"></i>
    {%- if settings.delivery_to_date > settings.delivery_from_date -%}
    <span class="toDate d-none"> {{delivery_text | split:'fromDate'| last | split:'toDate'|first}}  <i id="toDate"></i></span>
    {%- endif -%}
  </p>
</div>